<%= form_for @question, remote: true do |f| %>
  <% if @question.errors.any? %>
    <h2>Form is invalid</h2>
      <ul>
        <% @question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>

  <%= f.label :description %><br>
  <%= f.text_area :description %><br>

  <%= f.submit 'Submit' %>
<% end %>
